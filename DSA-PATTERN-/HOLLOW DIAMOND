int n=9;
    for(int i=1;i<=n;i++){
            for(int j=n-i-1;j>=0;j--){
                cout<<" ";
            }
            for(int j=1;j<=i;j++ ){
                if(j==i ||j==1){
                    cout<<"* ";
                }
                else{
                    cout<<"  ";
                }
            }
            cout<<endl;
            
            
    }
    for(int i=1;i<=n;i++){
            for(int j=1;j<=i;j++ ){
                        cout<<" ";
                    }
            for(int j=n-i-1;j>=0;j--){
                if( j==0|| j==n-i-1)
                    cout<<"* ";
                
                else{
                    cout<<"  ";
                }
            }
            cout<<endl;
}
