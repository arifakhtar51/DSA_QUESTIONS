n=8;
for(int i=0;i<n;i++){
    for(int j=n-i-1;j>=0;j--){
        cout<<" ";
    }
    for(int j=0;j<=i;j++){
        if(i==n-1){
            cout<<j+1<<" ";
        }
        else if(j==0 || j==i){
            cout<<j+1<<" ";
        }
        else{
            cout<<"  ";
        }
    }
    cout<< endl;
}
        1 
       1 2
      1   3
     1     4
    1       5 
   1         6
  1           7
 1 2 3 4 5 6 7 8
