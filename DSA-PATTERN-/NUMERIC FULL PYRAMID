n=5;
int k;
for(int i=1;i<=n;i++){
    for(int m=n-i;m>0;m--){
        cout<<"  ";
    }
    int j=0;
    for(;j<i;j++){
        k=i+j;
        cout<<k<<" ";
    }
    k--;
    
    for(int t=1;t<i;t++){
        cout<<k<<" ";
        k--;
    }

    cout<<endl;
}
